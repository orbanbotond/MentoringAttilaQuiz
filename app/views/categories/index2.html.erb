<p id="notice"><%= notice %></p>

<div style="width: 300px; margin: 0 auto; text-align: center;">

	<h2>Categories</h2>
	<br>

	<table class="table table-hover">
		<% @categories.each do |category| %>
			<tr>
			<td>
				<%= link_to category.name, edit_category_path(category), {:style => "font-size: 14px;"} %>
			</td>
			</tr>
		<% end %>
	</table>

	<br>
	<%= link_to 'New Category', new_category_path, {:class => 'h4'} %>

</div>
