<div style="width: 500px; margin: 0 auto;">

<h1>Categories</h1>

<table class="table table-hover" style="width :300px">

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <h3><%= link_to category.name, edit_category_path(category) %></h3>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

